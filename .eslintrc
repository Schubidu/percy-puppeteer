{
  extends: ['eslint:recommended', 'prettier', 'plugin:flowtype/recommended',],

  plugins: ['import', 'prettier', 'flowtype'],

  parser: 'babel-eslint',

  parserOptions: {
    ecmaVersion: 2017,
  },

  env: {
    es6: true,
    node: true,
  },

  rules: {
    'import/first': 'off',
    'import/no-extraneous-dependencies': [
      'error',
      {
        devDependencies: true,
        optionalDependencies: true,
        peerDependencies: true,
      },
    ],

    'prettier/prettier': [
      'error',
      {
        printWidth: 100,
        singleQuote: true,
        trailingComma: 'all',
        bracketSpacing: true,
      },
    ],
  },
}
